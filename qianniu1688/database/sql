-- 价格库存对比
SELECT
	r.item_name AS "商品名称",
	r.item_sku_name AS "颜色分类",
	ps.price AS "淘宝定价",
	r.offer_sku_name AS "1688颜色",
	psa.sku_price AS "1688代发价",
	round(ps.price - psa.sku_price, 2) AS "单件利润",
	round(
		(ps.price - psa.sku_price) / ps.price,
		2
	) AS "利润率",
	ps.stock AS "淘宝库存",
	psa.sku_stock AS "1688库存"
FROM
	relation r
LEFT JOIN price_stock ps ON r.item_sku_name = ps.sku_title
LEFT JOIN price_stock_1688 psa ON r.offer_sku_name = psa.sku_name